'Welcome to this really cool game!';
"\n";

sticks : 0;

WHILE 1 : {
    i : '';
    TRY : {
        i : !READ '> ';
    } : CATCH 'keyboardinterrupt' : {
        !ECHO "\nGoodbye.";
        BREAK;
    };

    IF i = '0' : {
        sticks +: 1;
        !ECHO 'Collected stick.';
    } : ELIF i = 'bag' : {
        !ECHO 'Sticks: ' + sticks;
    } : ELIF i = 'exit' : {
        !ECHO 'Goodbye.';
        BREAK;
    } : ELSE : {
        !ECHO "Sorry, I didn't understand that.";
    };

};
