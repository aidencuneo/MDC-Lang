'Welcome to this really cool game!';
"\n";

bag : null;
bag.sticks : 0;
bag.rocks : 0;

bag.showInv : [] => {
    s : '';
    if bag.sticks : {
        s+: '-> Sticks : ' + bag.sticks + "\n"};
    if bag.rocks : {
        s+: '-> Rocks : ' + bag.rocks + "\n"};
    if !s : {
        s : "You have no items.\n"};
    s;
};

while true : {
    i : '';
    try : {
        i : !read '> ';
    } : catch 'keyboardinterrupt' : {
        !echo "\nGoodbye.";
        break;
    };

    if i = 'stick' : {
        bag.sticks +: 1;
        !echo 'Collected stick.';
    } : elif i = 'rock' : {
        bag.rocks +: 1;
        !echo 'Collected rock.';
    } : elif i = 'bag' : {
        !bag.showInv;
    } : elif i = 'exit' : {
        !echo 'Goodbye.';
        break;
    } : else : {
        !echo "Sorry, I didn't understand that.";
    };

};
