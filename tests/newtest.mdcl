'Welcome to this really cool game!';
"\n";

bag : NULL;
bag.sticks : 0;
bag.rocks : 0;

bag.showInv : [] => {
    s : '';
    IF bag.sticks : {
        s+: '-> Sticks : ' + bag.sticks + "\n"};
    IF bag.rocks : {
        s+: '-> Rocks : ' + bag.rocks + "\n"};
    IF !s : {
        s : "You have no items.\n"};
    s;
};

WHILE 1 : {
    i : '';
    TRY : {
        i : !READ '> ';
    } : CATCH 'keyboardinterrupt' : {
        !ECHO "\nGoodbye.";
        BREAK;
    };

    IF i = 'stick' : {
        bag.sticks +: 1;
        !ECHO 'Collected stick.';
    } : ELIF i = 'rock' : {
        bag.rocks +: 1;
        !ECHO 'Collected rock.';
    } : ELIF i = 'bag' : {
        !bag.showInv;
    } : ELIF i = 'exit' : {
        !ECHO 'Goodbye.';
        BREAK;
    } : ELSE : {
        !ECHO "Sorry, I didn't understand that.";
    };

};
